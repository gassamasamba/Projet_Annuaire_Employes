{% extends "bases.html.twig" %}
{% block stylesheets %}
<link rel="stylesheet" href="style.css">
{% endblock %}
{% block main %}
<div>
<table>
<thead>
<tr>
<th>Id</th><th>Name</th><th>Bureau</th><th>Etage</th><th colspan="2">Action</th>
</tr>
</thead>
<tbody>
{% for service in services %}
<tr>
<td>{{service.id}}</td>
<td>{{service.name}}</td>
<td>{{service.bureau}}</td>
<td>{{service.etage}}</td>
<td><a href="{{path('update_service',{'id':service.id})}}">Modifier</a></td>
<td><a href="{{path('delete_service', {'id':service.id})}}">Supprimer</a></td>  
</tr>
    
{% endfor %}
</tbody>
</table>
</div>
<a href="{{path('create_service')}}">Ajouter/Service</a> 
{% endblock %}